<%= render "shared/flash_message" %>
<div class="container px-4">
  <div class="py-3">
    <%= tag.h2(t(".title")) %>
  </div>
  <%= form_with model: Current.user do |f| %>
    <div class="form-floating mb-3">
      <%= f.text_field :name, required: true, class: "form-control" %>
      <%= f.label :name %>
    </div>
    <div class="form-floating mb-3">
      <%= f.text_field :account_id, required: true, class: "form-control" %>
      <%= f.label :account_id %>
    </div>
    <div class="form-floating mb-3">
      <%= f.date_field :birthday, class: "form-control" %>
      <%= f.label :birthday %>
    </div>
    <div class="d-flex justify-content-end gap-3">
      <%= f.submit t("helpers.submit.submit"), class: "btn btn-outline-primary pull-right" %>
      <%= f.submit t("helpers.submit.update"), class: "btn btn-outline-primary pull-right" %>
    </div>
  <% end %>
</div>
